<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-4">
      <div class="row">
        <div class="thumbnail">
            <div class="caption center">
              <%= link_to image_tag(listing.image.url(:medium)), listing %>
              <h3><%= listing.name %></h3>
              <p><%= listing.price %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div> 

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
<% end %>
