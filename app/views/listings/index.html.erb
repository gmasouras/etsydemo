<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-4">
      <div class="row">
        <div class="thumbnail">

            <div class="caption center">
              <%= image_tag listing.image.url(:medium) %>
              <h3><%= listing.name %></h3>
              <p><%= listing.description %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary" %>
